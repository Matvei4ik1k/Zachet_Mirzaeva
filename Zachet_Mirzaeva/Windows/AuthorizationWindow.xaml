<Window x:Class="Zachet_Mirzaeva.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zachet_Mirzaeva.Windows"
        mc:Ignorable="d"
               Title="Авторизация" WindowStyle="None" 
        WindowState="Maximized" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Height="1080" Width="1920">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">

            <Image Source="/Image/Hotel.jpg" Stretch="UniformToFill" />
            <Rectangle Opacity="0.3" Fill="Black"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="100">
                <TextBlock Text="Добро пожаловать"   Foreground="White" FontSize="42" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Станьте частью нашего сообщества" Foreground="White" FontSize="24" Margin="0,20,0,0" TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>

                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="2" Grid.Column="1" Text="Авторизация"  FontSize="36"  FontWeight="Bold" Foreground="#333333"/>

            <TextBlock Grid.Row="4" Grid.Column="1" Text="Имя пользователя / почта"/>
            <TextBox Grid.Row="6" Grid.Column="1" />

            <TextBlock  Grid.Row="8" Grid.Column="1"  Text="Пароль" />
            <PasswordBox  Grid.Row="10" Grid.Column="1"  />

            <CheckBox  Grid.Row="12" Grid.Column="1" >
                <TextBlock Text="Я принимаю условия пользовательского соглашения и политику конфиденциальности"/>
            </CheckBox>

            <Border  Grid.Row="14" Grid.Column="1"  Width="500" Background="LightGray" CornerRadius="8" Padding="10 0">
                <Button Width="500" BorderBrush="Transparent" Background="Transparent" Content="Авторизоваться" />
            </Border>

            <StackPanel  Grid.Row="16" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Еще не создали аккаунт?"/>
                <Button x:Name="RegistrationBtn" Click="RegistrationBtn_Click" Content="Зарегистрироваться" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>